FROM python:3.10-slim
WORKDIR /docs-as-code
COPY . /docs-as-code

# Install git and any build dependencies
RUN apt-get update && apt-get install -y git build-essential && rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade pip

# Install MkDocs + Material + Swagger UI plugin + mkdocs-openapi-plugin + PyYAML
RUN pip install \
    mkdocs==1.5.3 \
    mkdocs-material==9.5.13 \
    mkdocs-swagger-ui-tag==0.6.0 \
    git+https://github.com/kazhala/mkdocs-openapi-plugin.git \
    pyyaml

CMD ["mkdocs", "serve", "-a", "0.0.0.0:8000"]
